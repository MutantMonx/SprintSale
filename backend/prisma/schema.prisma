// Prisma Schema for SprintSale
// Car listing aggregator with browser automation

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// AUTHENTICATION & USERS
// ============================================================================

enum UserTier {
  FREE
  PREMIUM
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  passwordHash  String    @map("password_hash")
  name          String?
  tier          UserTier  @default(FREE)
  emailVerified Boolean   @default(false) @map("email_verified")
  isAdmin       Boolean   @default(false) @map("is_admin")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  deletedAt     DateTime? @map("deleted_at")

  // Subscription
  planId        String?   @map("plan_id")
  plan          SubscriptionPlan? @relation(fields: [planId], references: [id])

  // Custom permissions (override plan limits, null = use plan defaults)
  customMaxServices       Int?    @map("custom_max_services")      // Max services, null=use plan, 0=unlimited
  customMaxSearchConfigs  Int?    @map("custom_max_search_configs") // Max searches, null=use plan, 0=unlimited
  customMaxNotificationsDay Int?  @map("custom_max_notifications_day") // Daily notifications, null=use plan
  customDailySearchMinutes Int?   @map("custom_daily_search_minutes") // Daily search time
  canAddCustomService     Boolean? @map("can_add_custom_service")  // null=use plan default
  allowedServiceIds       String[] @map("allowed_service_ids")     // Empty=all services allowed, else only these
  notes                   String?  // Admin notes about this user

  // Relations
  userServices   UserService[]
  searchConfigs  SearchConfig[]
  notifications  Notification[]
  mobileDevices  MobileDevice[]
  auditLogs      AuditLog[]
  refreshTokens  RefreshToken[]
  subscriptions  Subscription[]
  dailyUsage     DailyUsage[]

  @@map("users")
}

model AdminUser {
  id          String   @id @default(uuid())
  email       String   @unique
  passwordHash String  @map("password_hash")
  name        String
  totpSecret  String?  @map("totp_secret")
  totpEnabled Boolean  @default(false) @map("totp_enabled")
  createdAt   DateTime @default(now()) @map("created_at")

  // Relations
  auditLogs AuditLog[]

  @@map("admin_users")
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  revokedAt DateTime? @map("revoked_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("refresh_tokens")
}

// ============================================================================
// SERVICES & CREDENTIALS
// ============================================================================

model Service {
  id            String   @id @default(uuid())
  name          String   @unique
  baseUrl       String   @map("base_url")
  logoUrl       String?  @map("logo_url")
  isActive      Boolean  @default(true) @map("is_active")
  defaultConfig Json?    @map("default_config")
  createdAt     DateTime @default(now()) @map("created_at")

  // Relations
  userServices UserService[]
  workflows    AutomationWorkflow[]
  searchConfigs SearchConfig[]
  listings     Listing[]

  @@map("services")
}

model UserService {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  serviceId String   @map("service_id")
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  service Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  // Relations
  credentials ServiceCredentials?

  @@unique([userId, serviceId])
  @@map("user_services")
}

model ServiceCredentials {
  id                String   @id @default(uuid())
  userServiceId     String   @unique @map("user_service_id")
  encryptedUsername Bytes    @map("encrypted_username")
  encryptedPassword Bytes    @map("encrypted_password")
  iv                Bytes
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  userService UserService @relation(fields: [userServiceId], references: [id], onDelete: Cascade)

  @@map("service_credentials")
}

// ============================================================================
// AUTOMATION WORKFLOWS
// ============================================================================

model AutomationWorkflow {
  id          String   @id @default(uuid())
  serviceId   String   @map("service_id")
  name        String
  description String?
  version     Int      @default(1)
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  service Service        @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  steps   WorkflowStep[]

  @@unique([serviceId, name])
  @@map("automation_workflows")
}

enum WorkflowActionType {
  NAVIGATE
  CLICK
  FILL
  WAIT
  EXTRACT
  SCREENSHOT
  SCROLL
  SELECT
}

model WorkflowStep {
  id             String             @id @default(uuid())
  workflowId     String             @map("workflow_id")
  stepOrder      Int                @map("step_order")
  actionType     WorkflowActionType @map("action_type")
  cssSelector    String?            @map("css_selector")
  xpathSelector  String?            @map("xpath_selector")
  parameters     Json?
  validationRules Json?             @map("validation_rules")
  errorRecovery  Json?              @map("error_recovery")
  createdAt      DateTime           @default(now()) @map("created_at")

  workflow AutomationWorkflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  @@unique([workflowId, stepOrder])
  @@map("workflow_steps")
}

// ============================================================================
// SEARCH CONFIGURATIONS
// ============================================================================

model SearchConfig {
  id                 String    @id @default(uuid())
  userId             String    @map("user_id")
  serviceId          String    @map("service_id")
  name               String
  keywords           Json      @default("[]")
  priceMin           Int?      @map("price_min")
  priceMax           Int?      @map("price_max")
  location           String?
  customFilters      Json?     @map("custom_filters")
  intervalSeconds    Int       @default(60) @map("interval_seconds")
  randomRangeSeconds Int       @default(15) @map("random_range_seconds")
  isActive           Boolean   @default(true) @map("is_active")
  lastRunAt          DateTime? @map("last_run_at")
  nextRunAt          DateTime? @map("next_run_at")
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime  @updatedAt @map("updated_at")

  user    User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  service Service   @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  listings Listing[]

  @@index([userId])
  @@index([serviceId])
  @@index([isActive, nextRunAt])
  @@map("search_configs")
}

// ============================================================================
// LISTINGS & CACHE
// ============================================================================

model Listing {
  id             String    @id @default(uuid())
  serviceId      String    @map("service_id")
  searchConfigId String    @map("search_config_id")
  externalId     String    @map("external_id")
  title          String
  description    String?
  price          Int?
  currency       String    @default("PLN")
  location       String?
  phone          String?
  email          String?
  listingUrl     String    @map("listing_url")
  images         Json      @default("[]")
  primaryHash    String    @unique @map("primary_hash")
  semanticHash   String?   @map("semantic_hash")
  previousPrice  Int?      @map("previous_price")
  isAd           Boolean   @default(false) @map("is_ad")
  detectedAt     DateTime  @default(now()) @map("detected_at")
  createdAt      DateTime  @default(now()) @map("created_at")

  service       Service        @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  searchConfig  SearchConfig   @relation(fields: [searchConfigId], references: [id], onDelete: Cascade)
  cache         ListingCache?
  notifications Notification[]

  @@index([serviceId])
  @@index([searchConfigId])
  @@index([detectedAt])
  @@map("listings")
}

model ListingCache {
  id          String   @id @default(uuid())
  listingId   String   @unique @map("listing_id")
  contentHash String   @unique @map("content_hash")
  expiresAt   DateTime @map("expires_at")
  createdAt   DateTime @default(now()) @map("created_at")

  listing Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@index([expiresAt])
  @@map("listing_cache")
}

// ============================================================================
// NOTIFICATIONS
// ============================================================================

enum NotificationChannel {
  PUSH
  IN_APP
  EMAIL
  SMS
}

enum NotificationStatus {
  PENDING
  SENT
  DELIVERED
  READ
  FAILED
}

model Notification {
  id        String             @id @default(uuid())
  userId    String             @map("user_id")
  listingId String             @map("listing_id")
  channel   NotificationChannel
  status    NotificationStatus @default(PENDING)
  payload   Json
  sentAt    DateTime?          @map("sent_at")
  readAt    DateTime?          @map("read_at")
  createdAt DateTime           @default(now()) @map("created_at")

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  listing Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@index([userId, status])
  @@index([createdAt])
  @@map("notifications")
}

// ============================================================================
// MOBILE DEVICES
// ============================================================================

enum DevicePlatform {
  IOS
  ANDROID
}

model MobileDevice {
  id          String         @id @default(uuid())
  userId      String         @map("user_id")
  deviceToken String         @unique @map("device_token")
  platform    DevicePlatform
  deviceName  String?        @map("device_name")
  isActive    Boolean        @default(true) @map("is_active")
  createdAt   DateTime       @default(now()) @map("created_at")
  updatedAt   DateTime       @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("mobile_devices")
}

// ============================================================================
// AUDIT LOGS
// ============================================================================

model AuditLog {
  id          String   @id @default(uuid())
  userId      String?  @map("user_id")
  adminUserId String?  @map("admin_user_id")
  action      String
  entityType  String   @map("entity_type")
  entityId    String?  @map("entity_id")
  oldValues   Json?    @map("old_values")
  newValues   Json?    @map("new_values")
  ipAddress   String?  @map("ip_address")
  createdAt   DateTime @default(now()) @map("created_at")

  user      User?      @relation(fields: [userId], references: [id], onDelete: SetNull)
  adminUser AdminUser? @relation(fields: [adminUserId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([adminUserId])
  @@index([entityType, entityId])
  @@index([createdAt])
  @@map("audit_logs")
}

// ============================================================================
// SUBSCRIPTION PLANS
// ============================================================================

enum BillingPeriod {
  MONTHLY
  QUARTERLY
  YEARLY
}

model SubscriptionPlan {
  id                  String        @id @default(uuid())
  name                String        @unique  // FREE, PREMIUM
  displayName         String        @map("display_name")  // "Darmowy", "Premium"
  description         String?
  
  // Pricing
  priceMonthly        Decimal       @default(0) @map("price_monthly")
  priceQuarterly      Decimal       @default(0) @map("price_quarterly")
  priceYearly         Decimal       @default(0) @map("price_yearly")
  currency            String        @default("PLN")
  
  // Limits
  maxServices         Int           @default(1) @map("max_services")
  maxCustomServices   Int           @default(0) @map("max_custom_services")
  maxSearchConfigs    Int           @default(1) @map("max_search_configs")
  dailySearchMinutes  Int           @default(120) @map("daily_search_minutes")  // 2h = 120min, 0 = unlimited
  maxNotificationsDay Int           @default(2) @map("max_notifications_day")   // 0 = unlimited
  
  // Features
  canAddCustomService Boolean       @default(false) @map("can_add_custom_service")
  hasBonusService     Boolean       @default(false) @map("has_bonus_service")
  hasEmailReports     Boolean       @default(false) @map("has_email_reports")
  hasPrioritySupport  Boolean       @default(false) @map("has_priority_support")
  
  isActive            Boolean       @default(true) @map("is_active")
  displayOrder        Int           @default(0) @map("display_order")
  createdAt           DateTime      @default(now()) @map("created_at")
  updatedAt           DateTime      @updatedAt @map("updated_at")
  
  // Relations
  users               User[]
  subscriptions       Subscription[]
  
  @@map("subscription_plans")
}

// ============================================================================
// USER SUBSCRIPTIONS
// ============================================================================

enum SubscriptionStatus {
  ACTIVE
  PAST_DUE        // Payment overdue (grace period)
  SUSPENDED       // Suspended after grace period
  CANCELLED
  EXPIRED
}

model Subscription {
  id                  String             @id @default(uuid())
  userId              String             @map("user_id")
  planId              String             @map("plan_id")
  billingPeriod       BillingPeriod      @default(MONTHLY) @map("billing_period")
  
  status              SubscriptionStatus @default(ACTIVE)
  currentPeriodStart  DateTime           @map("current_period_start")
  currentPeriodEnd    DateTime           @map("current_period_end")
  
  // Payment tracking
  lastPaymentDate     DateTime?          @map("last_payment_date")
  nextPaymentDate     DateTime?          @map("next_payment_date")
  gracePeriodEnds     DateTime?          @map("grace_period_ends")
  
  // Auto-renewal
  autoRenew           Boolean            @default(true) @map("auto_renew")
  cancelledAt         DateTime?          @map("cancelled_at")
  cancellationReason  String?            @map("cancellation_reason")
  
  createdAt           DateTime           @default(now()) @map("created_at")
  updatedAt           DateTime           @updatedAt @map("updated_at")
  
  user                User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan                SubscriptionPlan   @relation(fields: [planId], references: [id])
  payments            Payment[]
  
  @@index([userId])
  @@index([status])
  @@index([currentPeriodEnd])
  @@map("subscriptions")
}

// ============================================================================
// PAYMENTS
// ============================================================================

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
  CANCELLED
}

enum PaymentProvider {
  PAYU
  PAYPAL
  GOOGLE_PAY
  APPLE_PAY
  STRIPE
  MANUAL
}

model Payment {
  id                  String          @id @default(uuid())
  subscriptionId      String          @map("subscription_id")
  
  amount              Decimal
  currency            String          @default("PLN")
  status              PaymentStatus   @default(PENDING)
  
  provider            PaymentProvider
  externalId          String?         @map("external_id")  // PayU/PayPal transaction ID
  externalStatus      String?         @map("external_status")
  
  // Invoice
  invoiceNumber       String?         @unique @map("invoice_number")
  invoiceUrl          String?         @map("invoice_url")
  
  // Metadata
  metadata            Json?
  errorMessage        String?         @map("error_message")
  
  createdAt           DateTime        @default(now()) @map("created_at")
  paidAt              DateTime?       @map("paid_at")
  refundedAt          DateTime?       @map("refunded_at")
  
  subscription        Subscription    @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  
  @@index([subscriptionId])
  @@index([status])
  @@index([externalId])
  @@map("payments")
}

// ============================================================================
// PAYMENT PROVIDER SETTINGS
// ============================================================================

model PaymentSettings {
  id                  String          @id @default(uuid())
  provider            PaymentProvider @unique
  
  isEnabled           Boolean         @default(false) @map("is_enabled")
  isSandbox           Boolean         @default(true) @map("is_sandbox")
  
  // Credentials (encrypted)
  clientId            String?         @map("client_id")
  clientSecretEnc     Bytes?          @map("client_secret_enc")
  merchantId          String?         @map("merchant_id")
  posId               String?         @map("pos_id")  // PayU
  secondKeyEnc        Bytes?          @map("second_key_enc")  // PayU
  webhookSecretEnc    Bytes?          @map("webhook_secret_enc")
  
  // Additional config
  config              Json?
  
  updatedAt           DateTime        @updatedAt @map("updated_at")
  
  @@map("payment_settings")
}

// ============================================================================
// APP SETTINGS
// ============================================================================

model AppSettings {
  id                  String          @id @default(uuid())
  key                 String          @unique
  value               String          @db.Text
  description         String?
  isPublic            Boolean         @default(false) @map("is_public")
  updatedAt           DateTime        @updatedAt @map("updated_at")
  
  @@map("app_settings")
}

// ============================================================================
// LEGAL PAGES
// ============================================================================

model LegalPage {
  id                  String          @id @default(uuid())
  slug                String          @unique  // privacy-policy, terms-of-service
  title               String
  content             String          @db.Text
  isPublished         Boolean         @default(true) @map("is_published")
  createdAt           DateTime        @default(now()) @map("created_at")
  updatedAt           DateTime        @updatedAt @map("updated_at")
  
  @@map("legal_pages")
}

// ============================================================================
// DAILY USAGE TRACKING (for Free plan limits)
// ============================================================================

model DailyUsage {
  id                  String          @id @default(uuid())
  userId              String          @map("user_id")
  date                DateTime        @db.Date
  
  searchMinutesUsed   Int             @default(0) @map("search_minutes_used")
  notificationsSent   Int             @default(0) @map("notifications_sent")
  
  user                User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, date])
  @@index([date])
  @@map("daily_usage")
}

